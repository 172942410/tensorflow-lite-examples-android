<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/fragment_view_root"
	android:background="@color/question_panel_background_color"
	android:layout_width="match_parent"
    android:layout_height="wrap_content">

	<TextView
		android:id="@+id/questions_title"
		android:text="@string/label_questions"
		style="@style/QuestionsTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	
    <androidx.recyclerview.widget.RecyclerView
        android:id="@android:id/list"
		style="@style/QuestionsListView"
		android:layout_below="@id/questions_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>

</RelativeLayout>