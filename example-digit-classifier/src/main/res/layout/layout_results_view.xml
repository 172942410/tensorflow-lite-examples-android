<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/result_image"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/lv_item_padding"
        android:layout_width="@dimen/results_image_size"
        android:layout_height="@dimen/results_image_size"/>

    <TextView
        android:id="@+id/result_digit"
        style="@style/RecognizedDigit"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/result_prop"
        style="@style/RecognizedProp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
