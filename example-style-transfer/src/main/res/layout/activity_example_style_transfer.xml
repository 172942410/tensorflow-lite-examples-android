<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.dailystudio.tflite.example.image.styletransfer.ui.StyledOverlay
        android:id="@+id/styled_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include android:id="@+id/top_bar_layout"
        layout="@layout/layout_top_bar"/>

    <include android:id="@+id/bottom_sheet_layout"
        layout="@layout/layout_bottom_sheet"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        app:srcCompat="@drawable/ic_style_images"
        app:backgroundTint="@color/colorPrimary"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/style_images_button_margin_start"
        android:layout_marginBottom="@dimen/style_images_button_margin_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:visibility="gone"
        android:background="@color/semi_black"
        android:layout_marginTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragment_styles"
            android:name="com.dailystudio.tflite.example.image.styletransfer.fragment.StyleImagesListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>